<h3 class="text-center">Click on a match to buy tickets</h3>
<div class="row">
  <div class="col-md-1 sidebar">
    <h5>Jump to:</h5>
    <ul class="sidebar_row">
      <li class="hover-month"><a href="#august">August</a></li>
      <li class="hover-month"><a href="#september">September</a></li>
      <li class="hover-month"><a href="#october">October</a></li>
      <li class="hover-month"><a href="#november">November</a></li>
      <li class="hover-month"><a href="#december">December</a></li>
      <li class="hover-month"><a href="#january">January</a></li>
      <li class="hover-month"><a href="#february">February</a></li>
      <li class="hover-month"><a href="#march">March</a></li>
      <li class="hover-month"><a href="#april">April</a></li>
      <li class="hover-month"><a href="#may">May</a></li>
    </ul>
  </div>
  <div class="col-xs-12 col-md-11">
    <%= form_tag matches_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a match for a home game"
      %>
    <% end %>
    <%= render "partials/match_cards" %>
  </div>
</div>
